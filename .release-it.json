{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": [
        "release/${version}/*.exe",
        "release/${version}/*.msi",
        "release/${version}/*.zip",
        "release/${version}/*.dmg",
        "release/${version}/*.pkg",
        "release/${version}/*.AppImage",
        "release/${version}/*.deb",
        "release/${version}/*.rpm",
        "release/${version}/*.tar.gz"
    ]
  },
  "hooks": {
    "before:init": "echo Starting release for version ${version}"
  }
}
