{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": [
      "${version}/*.AppImage",
      "${version}/*.deb",
      "${version}/*.exe",
      "${version}/*.dmg",
      "${version}/*.snap"
    ]
  },
  "hooks": {
    "before:init": "echo Starting release for version ${version}",
    "before:github:release": "npm run build"
  }
}
