{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": [
      "./**/*.AppImage",
      "./**/*.deb",
      "./**/*.snap",
      "./**/*.dmg",
      "./**/*.exe",
      "./**/*.zip"
    ]
  },
  "hooks": {
    "before:init": "echo Starting release for version ${version}"
  }
}
