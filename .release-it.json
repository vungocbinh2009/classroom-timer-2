{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": [
        "dist-all/*/*/*.exe",
        "dist-all/*/*/*.zip",
        "dist-all/*/*/*.dmg",
        "dist-all/*/*/*.AppImage",
        "dist-all/*/*/*.deb"
    ]
  },
  "hooks": {
    "before:init": "echo Starting release for version ${version}"
  }
}
