{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": [
        "dist-all/*/*.exe",
        "dist-all/*/*.msi",
        "dist-all/*/*.zip",
        "dist-all/*/*.dmg",
        "dist-all/*/*.pkg",
        "dist-all/*/*.AppImage",
        "dist-all/*/*.deb",
        "dist-all/*/*.rpm",
        "dist-all/*/*.tar.gz"
    ]
  },
  "hooks": {
    "before:init": "echo Starting release for version ${version}"
  }
}
